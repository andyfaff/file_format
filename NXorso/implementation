class NXorso:
    # equivalent to SASroot

    def __init__(self)
        pass

    def __enter__(self):
        return self

    def __exit__(self):
        pass

    def save(self):
        # saves the file
        pass
    def close(self):
        pass

class NXentry:
    # equivalent to SASentry
    def __init__(self, parent=None)
        self._nxdata = []

    def create_NXdata(self, nxdata):
        # nxdata should be an instance of NXdata
        if isinstance(nxdata, NXdata):
            self._nxdata.append(nxdata)

    @property
    def nxdata():
        #return list of NXdata associated with file
        self._nxdata

